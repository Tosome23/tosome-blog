<!doctype html>
<html lang="ko">
<head>
  <meta charset="utf-8">
  <title>{{ title or "투삼로지스 블로그" }}</title>
  {% if description %}<meta name="description" content="{{ description }}">{% endif %}
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {# SEO / OG #}
  <link rel="canonical" href="{{ page.url | url }}">
  <meta property="og:title" content="{{ title or '투삼로지스 블로그' }}">
  <meta property="og:description" content="{{ description or '위험물·배터리 국제특송 전문 블로그' }}">
  <meta property="og:type" content="article">
  <meta property="og:url" content="{{ page.url | url }}">
  <meta name="robots" content="index,follow">

  <link rel="stylesheet" href="/style.css">
  <link rel="icon" href="/favicon.ico">
</head>
<body>
  <header class="site-header">
    <div class="wrap nav">
      <a class="brand" href="https://tosomelogis.com">투삼로지스</a>
      <nav class="menu">
        <a href="/">블로그</a>
        <a href="https://tosomelogis.com/services">서비스</a>
        <a class="cta" href="https://tosomelogis.com/contact">문의하기</a>
      </nav>
    </div>
  </header>

  <main class="wrap">
    {{ content | safe }}
  </main>

  <footer class="site-footer">
    <div class="wrap">
      <p>© {{ "now" | date | slice(0,4) }} 투삼로지스 · 국제특송/위험물 전문</p>
    </div>
  </footer>
</body>
</html>
